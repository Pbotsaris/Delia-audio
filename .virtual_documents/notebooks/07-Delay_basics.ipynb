def iir_comb_filter(x, g, t, fs):
    N = len(x)
    
    y = np.zeros(N)
    c = 1 - g # unit gain
    M = int(t * fs)
    # for interpolation in case M is fractional
    frac =  (t * fs) - M

    for n in range(N):
        if M > n:
            y[n] = c * x[n]
            continue
            
        y[n] = c * x[n] + g * y[n - M]

        if frac != 0 and n > M:
            y[n] *= (1 - frac) + y[n - M - 1] * frac

    return y

